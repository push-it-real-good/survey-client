<table class="table table-sm" id="survey-list-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Question</th>
    </tr>
  </thead>

    <tbody>
      {{#each surveys as |survey|}}
        <tr data-id="{{survey.id}}">
          <td>{{survey.id}}</td>
          <td>{{survey.title}}</td>
          <td>{{survey.question}}</td>
          <td><button type="button" class="remove-survey btn btn-default" data-id="{{survey.id}}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button></td>
          <td><button type="button" class="update-survey btn btn-default" data-id="{{survey.id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></td>
      </tr>
    </tbody>

    {{/each}}

  </table>
