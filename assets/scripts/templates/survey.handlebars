<table class="table" id="survey-list-table">
  <BR />
  <col style="width:20%">
  <col style="width:20%">
  <col style="width:40%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Question</th>
      <th>Survey URL</th>
      <!-- <th>Owner</th> -->
    </tr>
  </thead>

    <tbody>
      {{#each surveys as |survey|}}
        <tr data-id="{{survey.id}}">
          <td>{{survey.title}}</td>
          <td>{{survey.question}}</td>
          <td>https://kqngo.github.io/survey-client/?dc1=respondents&dc2={{survey.id}}</td>
          <td class="hideMe">{{survey._owner}}</td>
          <!-- <td>{{survey.question1}}</td> -->
          <td class="glyphicon"><button type="button" class="remove-survey btn btn-default glyphicon" data-id="{{survey.id}}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button></td>
          <td class="glyphicon"><button type="button" class="update-survey btn btn-default glyphicon" data-id="{{survey.id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></td>
          <td class="glyphicon"><button type="button" id="{{survey.id}}" class="dashboard-button see-response btn btn-default glyphicon" data-id="{{survey.id}}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></button></td>

      </tr>
    </tbody>

    {{/each}}

  </table>
